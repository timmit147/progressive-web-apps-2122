<!-- Place list of artist in option -->
<script>
    var names =  "<%- names %>";
    names = names.split(","); 
for(let i = 0; i < names.length; i++) {
    var opt = names[i];
    var el = document.createElement("option");
    el.textContent = opt;
    el.value = opt;
    document.getElementById("selectNumber").appendChild(el);
}

