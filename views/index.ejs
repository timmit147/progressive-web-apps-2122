<!-- Load header -->
<%- include('./partials/head') %>

<!-- Loop artobjects in a ul -->
<ul>
<% for (var i = 0; i < data.artObjects.length; i++) { %>

    <li style="margin-bottom: <%- (i * -100); %>vh">
        <h1><%- data.artObjects[i].title %></h1>
        <% if(data.artObjects[i].webImage != null){ %>
            <img alt="<%- data.artObjects[i].title %>" src=<%-data.artObjects[i].webImage.url.slice(0, -3)+"=s500" %>>
         <% } %>  
    </li>
    <% } %>
</ul>

<!-- Menu with dropdown with all painters -->
<div class="menu">
    <h2>Settings</h2>
    <p>Filter artist</p>
    <select id="selectNumber">
        <option class="defaultOption"> Choose a artist </option>
        <% for (var i = 0; i < names.length; i++) { %>
            <option > <%- names[i] %></option> 
        <% } %>
    </select>
</div>
    <div class="menuButton">
    <div></div>
</div>

<!-- Place list of artist in option -->
<script>

document.getElementById("selectNumber").addEventListener("change", function() {
    window.location.href="artist"+this.value;
}); 
</script>

<!-- Load footer -->
<%- include('./partials/foot') %>
